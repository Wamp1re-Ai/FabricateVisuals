---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import EnhancedServicesSection from '../components/EnhancedServicesSection.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="FabricateVisuals - Premium AI Services for Voice, TTS, Image & Video Generation">
  <Navigation />
  <main>
    <Hero />
    <EnhancedServicesSection />
    <TestimonialsSection />
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-6">
            <span class="bg-gradient-to-r from-primary-400 to-accent-400 bg-clip-text text-transparent">
              What Our Clients Say
            </span>
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            Trusted by creators, businesses, and innovators worldwide
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Testimonial 1 -->
          <div class="bg-dark-800/50 backdrop-blur-sm border border-dark-700/50 rounded-2xl p-8 hover:border-primary-500/30 transition-all duration-300">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-full flex items-center justify-center text-white font-bold text-lg">
                S
              </div>
              <div class="ml-4">
                <h4 class="text-white font-semibold">Sarah Johnson</h4>
                <p class="text-gray-400 text-sm">Content Creator</p>
              </div>
            </div>
            <p class="text-gray-300 leading-relaxed mb-4">
              "FabricateVisuals transformed my podcast with their AI voice generation. The quality is incredible and my audience can't tell the difference!"
            </p>
            <div class="flex text-yellow-400">
              ★★★★★
            </div>
          </div>

          <!-- Testimonial 2 -->
          <div class="bg-dark-800/50 backdrop-blur-sm border border-dark-700/50 rounded-2xl p-8 hover:border-accent-500/30 transition-all duration-300">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-br from-accent-500 to-accent-600 rounded-full flex items-center justify-center text-white font-bold text-lg">
                M
              </div>
              <div class="ml-4">
                <h4 class="text-white font-semibold">Mike Chen</h4>
                <p class="text-gray-400 text-sm">Marketing Director</p>
              </div>
            </div>
            <p class="text-gray-300 leading-relaxed mb-4">
              "Their image generation service helped us create stunning visuals for our campaign. Professional quality at lightning speed!"
            </p>
            <div class="flex text-yellow-400">
              ★★★★★
            </div>
          </div>

          <!-- Testimonial 3 -->
          <div class="bg-dark-800/50 backdrop-blur-sm border border-dark-700/50 rounded-2xl p-8 hover:border-primary-500/30 transition-all duration-300">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-accent-500 rounded-full flex items-center justify-center text-white font-bold text-lg">
                E
              </div>
              <div class="ml-4">
                <h4 class="text-white font-semibold">Emily Rodriguez</h4>
                <p class="text-gray-400 text-sm">Video Producer</p>
              </div>
            </div>
            <p class="text-gray-300 leading-relaxed mb-4">
              "The video generation capabilities are mind-blowing. We've cut our production time by 70% while maintaining top-tier quality."
            </p>
            <div class="flex text-yellow-400">
              ★★★★★
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-primary-500/10 to-accent-500/10"></div>
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          <span class="bg-gradient-to-r from-primary-400 to-accent-400 bg-clip-text text-transparent">
            Ready to Transform
          </span>
          <br />
          <span class="text-white">Your Vision?</span>
        </h2>
        <p class="text-xl text-gray-300 mb-12 max-w-2xl mx-auto leading-relaxed">
          Join thousands of satisfied clients who have revolutionized their content creation with our AI-powered services.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a href="/contact" class="bg-gradient-to-r from-primary-500 to-accent-500 text-white px-8 py-4 rounded-full text-lg font-bold hover:from-primary-600 hover:to-accent-600 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-primary-500/25 flex items-center space-x-2">
            <span>Start Your Project</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
          <a href="/portfolio" class="bg-transparent border-2 border-white text-white px-8 py-4 rounded-full text-lg font-bold hover:bg-white hover:text-dark-900 transition-all duration-300 transform hover:scale-105 flex items-center space-x-2">
            <span>View Our Work</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
