---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Contact Us - FabricateVisuals" description="Get in touch with our AI experts. Start your project today with professional AI services.">
  <Navigation />
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-black mb-6">
          <span class="bg-gradient-to-r from-primary-400 to-accent-400 bg-clip-text text-transparent">
            Let's Create
          </span>
          <br />
          <span class="text-white">Together</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
          Ready to transform your vision with AI? Get in touch and let's discuss your project.
        </p>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          <!-- Contact Form -->
          <div class="bg-dark-800/50 backdrop-blur-sm border border-dark-700/50 rounded-3xl p-8">
            <h2 class="text-3xl font-bold text-white mb-8">Send us a message</h2>
            <form class="space-y-6" id="contact-form">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-300 mb-2">First Name</label>
                  <input 
                    type="text" 
                    id="firstName" 
                    name="firstName" 
                    required
                    class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-primary-500 transition-colors duration-300"
                    placeholder="John"
                  />
                </div>
                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-300 mb-2">Last Name</label>
                  <input 
                    type="text" 
                    id="lastName" 
                    name="lastName" 
                    required
                    class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-primary-500 transition-colors duration-300"
                    placeholder="Doe"
                  />
                </div>
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-primary-500 transition-colors duration-300"
                  placeholder="john@example.com"
                />
              </div>
              
              <div>
                <label for="service" class="block text-sm font-medium text-gray-300 mb-2">Service Interested In</label>
                <select 
                  id="service" 
                  name="service" 
                  required
                  class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white focus:outline-none focus:border-primary-500 transition-colors duration-300"
                >
                  <option value="">Select a service</option>
                  <option value="ai-voice">AI Voice Generation</option>
                  <option value="tts">Text-to-Speech</option>
                  <option value="image-gen">Image Generation</option>
                  <option value="video-gen">Video Production</option>
                  <option value="custom">Custom Solution</option>
                </select>
              </div>
              
              <div>
                <label for="budget" class="block text-sm font-medium text-gray-300 mb-2">Project Budget</label>
                <select 
                  id="budget" 
                  name="budget" 
                  class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white focus:outline-none focus:border-primary-500 transition-colors duration-300"
                >
                  <option value="">Select budget range</option>
                  <option value="under-1k">Under $1,000</option>
                  <option value="1k-5k">$1,000 - $5,000</option>
                  <option value="5k-10k">$5,000 - $10,000</option>
                  <option value="10k-plus">$10,000+</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-300 mb-2">Project Details</label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="6" 
                  required
                  class="w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-primary-500 transition-colors duration-300 resize-none"
                  placeholder="Tell us about your project, timeline, and any specific requirements..."
                ></textarea>
              </div>
              
              <button 
                type="submit" 
                class="w-full bg-gradient-to-r from-primary-500 to-accent-500 text-white px-8 py-4 rounded-lg text-lg font-bold hover:from-primary-600 hover:to-accent-600 transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-primary-500/25"
              >
                Send Message
              </button>
            </form>
          </div>

          <!-- Contact Info -->
          <div class="space-y-8">
            <!-- Contact Details -->
            <div class="bg-dark-800/50 backdrop-blur-sm border border-dark-700/50 rounded-3xl p-8">
              <h3 class="text-2xl font-bold text-white mb-6">Get in Touch</h3>
              <div class="space-y-6">
                <div class="flex items-start">
                  <div class="w-12 h-12 bg-primary-500/20 rounded-xl flex items-center justify-center mr-4 mt-1">
                    <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-lg font-semibold text-white mb-1">Email</h4>
                    <p class="text-gray-400">hello@fabricatevisuals.in</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="w-12 h-12 bg-accent-500/20 rounded-xl flex items-center justify-center mr-4 mt-1">
                    <svg class="w-6 h-6 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-lg font-semibold text-white mb-1">Response Time</h4>
                    <p class="text-gray-400">Within 24 hours</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="w-12 h-12 bg-primary-500/20 rounded-xl flex items-center justify-center mr-4 mt-1">
                    <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-lg font-semibold text-white mb-1">Location</h4>
                    <p class="text-gray-400">Global Remote Team</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- FAQ -->
            <div class="bg-dark-800/50 backdrop-blur-sm border border-dark-700/50 rounded-3xl p-8">
              <h3 class="text-2xl font-bold text-white mb-6">Quick Questions</h3>
              <div class="space-y-4">
                <div>
                  <h4 class="text-lg font-semibold text-white mb-2">How long does a typical project take?</h4>
                  <p class="text-gray-400">Most projects are completed within 3-7 business days, depending on complexity.</p>
                </div>
                <div>
                  <h4 class="text-lg font-semibold text-white mb-2">Do you offer revisions?</h4>
                  <p class="text-gray-400">Yes, we include up to 3 revisions with every project to ensure your satisfaction.</p>
                </div>
                <div>
                  <h4 class="text-lg font-semibold text-white mb-2">What file formats do you provide?</h4>
                  <p class="text-gray-400">We deliver in all major formats including MP3, WAV, MP4, PNG, JPG, and more.</p>
                </div>
              </div>
            </div>

            <!-- CTA -->
            <div class="bg-gradient-to-r from-primary-500/10 to-accent-500/10 rounded-3xl p-8 border border-primary-500/20">
              <h3 class="text-2xl font-bold text-white mb-4">Need Immediate Help?</h3>
              <p class="text-gray-300 mb-6">For urgent projects or technical support, reach out directly.</p>
              <a href="mailto:hello@fabricatevisuals.in" class="inline-flex items-center bg-gradient-to-r from-primary-500 to-accent-500 text-white px-6 py-3 rounded-lg font-semibold hover:from-primary-600 hover:to-accent-600 transition-all duration-300">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                Email Us Directly
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

<script>
  // Form submission handler
  document.getElementById('contact-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Show success message (in a real app, you'd send this to your backend)
    alert('Thank you for your message! We\'ll get back to you within 24 hours.');
    
    // Reset form
    this.reset();
  });
</script>
