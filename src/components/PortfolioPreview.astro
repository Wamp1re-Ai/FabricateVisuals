---
// Portfolio Preview Component for Homepage
interface PortfolioItem {
  id: string;
  title: string;
  description: string;
  category: string;
  type: string;
  stats: string;
  icon: string;
}

const portfolioItems: PortfolioItem[] = [
  {
    id: "1",
    title: "Fantasy Novel Narration",
    description: "Created multiple character voices for a 12-hour fantasy audiobook with distinct personalities and accents.",
    category: "AI Voice",
    type: "Audiobook",
    stats: "12 hours",
    icon: "voice"
  },
  {
    id: "2",
    title: "Product Campaign Visuals",
    description: "Generated 50+ unique product images for a tech startup's marketing campaign across social media platforms.",
    category: "AI Image",
    type: "Marketing",
    stats: "50 images",
    icon: "image"
  },
  {
    id: "3",
    title: "Corporate Training Series",
    description: "Produced 10 training videos with AI-generated presenters and animations for employee onboarding.",
    category: "AI Video",
    type: "Corporate",
    stats: "10 videos",
    icon: "video"
  },
  {
    id: "4",
    title: "Multilingual Course Content",
    description: "Converted educational content into speech in 12 languages for a global online learning platform.",
    category: "Text-to-Speech",
    type: "E-Learning",
    stats: "12 languages",
    icon: "tts"
  },
  {
    id: "5",
    title: "Radio Advertisement Campaign",
    description: "Created compelling voiceovers for a national radio campaign with emotional depth and brand consistency.",
    category: "AI Voice",
    type: "Commercial",
    stats: "30 ads",
    icon: "voice"
  },
  {
    id: "6",
    title: "Digital Art Collection",
    description: "Designed a series of abstract digital artworks for a contemporary art gallery's virtual exhibition.",
    category: "AI Image",
    type: "Art",
    stats: "25 artworks",
    icon: "image"
  }
];

function getIconSVG(iconType: string) {
  switch(iconType) {
    case 'voice':
      return `<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>`;
    case 'image':
      return `<path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>`;
    case 'video':
      return `<path d="M17 10.5V7c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v10c0 .55.45 1 1 1h12c.55 0 1-.45 1-1v-3.5l4 4v-11l-4 4z"/>`;
    case 'tts':
      return `<path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/>`;
    default:
      return `<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>`;
  }
}

function getCategoryColor(category: string) {
  switch(category) {
    case 'AI Voice':
      return 'from-indigo-500/20 to-purple-500/20 border-indigo-500/30 text-indigo-300';
    case 'AI Image':
      return 'from-purple-500/20 to-pink-500/20 border-purple-500/30 text-purple-300';
    case 'AI Video':
      return 'from-blue-500/20 to-indigo-500/20 border-blue-500/30 text-blue-300';
    case 'Text-to-Speech':
      return 'from-emerald-500/20 to-teal-500/20 border-emerald-500/30 text-emerald-300';
    default:
      return 'from-gray-500/20 to-gray-600/20 border-gray-500/30 text-gray-300';
  }
}
---

<section class="py-16 sm:py-24 lg:py-32 relative" id="portfolio-preview">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12 sm:mb-16 lg:mb-20">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-display font-bold text-white mb-4 sm:mb-6">
        Recent Projects
      </h2>
      <p class="text-lg sm:text-xl text-gray-400 max-w-3xl mx-auto px-4">
        Discover how we've helped clients across industries achieve their creative goals with AI
      </p>
    </div>

    <!-- Portfolio Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 mb-12">
      {portfolioItems.map((item) => (
        <div class="glass-effect rounded-2xl sm:rounded-3xl overflow-hidden hover-lift group cursor-pointer">
          <!-- Project Visual -->
          <div class={`aspect-video bg-gradient-to-br ${getCategoryColor(item.category)} flex items-center justify-center border-b`}>
            <svg class="w-12 h-12 sm:w-16 sm:h-16 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24" set:html={getIconSVG(item.icon)}>
            </svg>
          </div>
          
          <!-- Content -->
          <div class="p-6">
            <div class="flex items-center justify-between mb-3">
              <span class={`bg-gradient-to-r ${getCategoryColor(item.category)} px-3 py-1 rounded-full text-sm font-medium border`}>
                {item.category}
              </span>
              <span class="text-gray-400 text-sm">{item.type}</span>
            </div>
            <h3 class="text-xl font-display font-semibold text-white mb-2 group-hover:text-primary-400 transition-colors duration-300">
              {item.title}
            </h3>
            <p class="text-gray-400 text-sm leading-relaxed mb-4">
              {item.description}
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">{item.stats}</span>
              <button class="text-primary-400 hover:text-primary-300 font-semibold text-sm">
                View Details
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- View All Portfolio CTA -->
    <div class="text-center">
      <a href="/portfolio" class="inline-flex items-center space-x-2 bg-gradient-to-r from-primary-500 to-accent-500 text-white px-8 py-4 rounded-full font-semibold hover:from-primary-600 hover:to-accent-600 transition-all duration-300 transform hover:scale-105 min-h-[44px]">
        <span>View Full Portfolio</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .hover-lift:hover {
    transform: translateY(-8px);
  }
  
  .glass-effect {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
</style>
