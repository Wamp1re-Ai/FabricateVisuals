---
// Enhanced Hero section with sophisticated animations and interactive elements
---

<section class="relative min-h-screen flex items-center justify-center pt-20 overflow-hidden">
  <!-- Sophisticated Background Effects -->
  <div class="absolute inset-0 opacity-30">
    <!-- Floating geometric shapes -->
    <div class="absolute top-1/4 left-1/4 w-32 h-32 border border-white/10 rounded-2xl rotate-45 animate-subtle-float"></div>
    <div class="absolute top-3/4 right-1/4 w-24 h-24 border border-indigo-400/20 rounded-full animate-subtle-float" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 left-3/4 w-16 h-16 bg-gradient-to-br from-purple-500/10 to-pink-500/10 rounded-lg animate-subtle-float" style="animation-delay: 4s;"></div>

    <!-- Subtle grid pattern -->
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.3) 1px, transparent 0); background-size: 50px 50px;"></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-6 lg:px-8">
    <div class="text-center space-y-8">
      <!-- Status Badge -->
      <div class="inline-flex items-center space-x-2 glass-effect rounded-full px-4 py-2 text-sm text-gray-300 animate-fade-in-up">
        <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
        <span>Available for new projects</span>
      </div>

      <!-- Enhanced Main Heading -->
      <div class="space-y-6 animate-fade-in-up" style="animation-delay: 0.2s;">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-display font-bold leading-tight">
          <span class="block text-white">AI-Powered</span>
          <span class="block gradient-text">Content Creation</span>
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-gray-400 max-w-3xl mx-auto leading-relaxed px-4">
          Transform your creative vision with sophisticated artificial intelligence.
          Professional-grade voice synthesis, image generation, and video production.
        </p>
      </div>

      <!-- Interactive Service Preview -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-2xl mx-auto animate-fade-in-up" style="animation-delay: 0.4s;">
        <div class="glass-effect rounded-2xl p-4 hover-lift cursor-pointer group">
          <div class="w-8 h-8 mx-auto mb-2 text-indigo-400 group-hover:scale-110 transition-transform duration-300">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
            </svg>
          </div>
          <p class="text-xs text-gray-400 group-hover:text-white transition-colors">Voice AI</p>
        </div>
        <div class="glass-effect rounded-2xl p-4 hover-lift cursor-pointer group">
          <div class="w-8 h-8 mx-auto mb-2 text-purple-400 group-hover:scale-110 transition-transform duration-300">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <p class="text-xs text-gray-400 group-hover:text-white transition-colors">Images</p>
        </div>
        <div class="glass-effect rounded-2xl p-4 hover-lift cursor-pointer group">
          <div class="w-8 h-8 mx-auto mb-2 text-pink-400 group-hover:scale-110 transition-transform duration-300">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </div>
          <p class="text-xs text-gray-400 group-hover:text-white transition-colors">Video</p>
        </div>
        <div class="glass-effect rounded-2xl p-4 hover-lift cursor-pointer group">
          <div class="w-8 h-8 mx-auto mb-2 text-emerald-400 group-hover:scale-110 transition-transform duration-300">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <p class="text-xs text-gray-400 group-hover:text-white transition-colors">Custom</p>
        </div>
      </div>

      <!-- Enhanced CTA Section -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up px-4" style="animation-delay: 0.6s;">
        <a href="/portfolio" class="accent-gradient animate-gradient text-white px-6 sm:px-8 py-3 sm:py-4 rounded-full font-semibold hover:shadow-2xl hover:shadow-purple-500/25 transition-all duration-300 hover:scale-105 group min-h-[44px] flex items-center justify-center w-full sm:w-auto">
          <span class="flex items-center space-x-2">
            <span>View Our Work</span>
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </span>
        </a>
        <a href="/contact" class="border border-white/20 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-full font-semibold hover:bg-white/5 transition-all duration-300 group min-h-[44px] flex items-center justify-center w-full sm:w-auto">
          <span class="flex items-center space-x-2">
            <span>Start a Project</span>
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </span>
        </a>
      </div>

      <!-- Trusted By Section -->
      <div class="pt-16 animate-fade-in-up" style="animation-delay: 0.8s;">
        <p class="text-sm text-gray-500 mb-8">Trusted by innovative companies</p>
        <div class="flex justify-center items-center space-x-12 opacity-40">
          <div class="text-2xl font-bold text-gray-600">ACME</div>
          <div class="text-2xl font-bold text-gray-600">TECH</div>
          <div class="text-2xl font-bold text-gray-600">STUDIO</div>
          <div class="text-2xl font-bold text-gray-600">LABS</div>
        </div>
      </div>
    </div>
  </div>

    <!-- Stats -->
    <div class="animate-fade-in mt-12 sm:mt-16 grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-8 max-w-4xl mx-auto px-4" style="animation-delay: 1.2s;">
      <div class="text-center">
        <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-primary-400 mb-2">500+</div>
        <div class="text-gray-400 text-xs sm:text-sm md:text-base">Projects Completed</div>
      </div>
      <div class="text-center">
        <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-accent-400 mb-2">50+</div>
        <div class="text-gray-400 text-xs sm:text-sm md:text-base">Happy Clients</div>
      </div>
      <div class="text-center">
        <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-primary-400 mb-2">24/7</div>
        <div class="text-gray-400 text-xs sm:text-sm md:text-base">Support</div>
      </div>
      <div class="text-center">
        <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-accent-400 mb-2">99%</div>
        <div class="text-gray-400 text-xs sm:text-sm md:text-base">Satisfaction</div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </div>
</section>
